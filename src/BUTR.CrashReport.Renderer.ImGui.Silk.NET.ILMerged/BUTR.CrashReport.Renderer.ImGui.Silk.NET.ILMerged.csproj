<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0;net8.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);OPENGL</DefineConstants>
    <RootNamespace>BUTR.CrashReport.Renderer.ImGui.Silk.NET</RootNamespace>
    <AssemblyName>BUTR.CrashReport.Renderer.ImGui.Silk.NET</AssemblyName>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>BUTR.CrashReport.Renderer.ImGui.Silk.NET.ILMerged</PackageId>
    <Title>BUTR.CrashReport.Renderer.ImGui.Silk.NET.ILMerged</Title>
    <Description></Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIconUrl>https://raw.githubusercontent.com/BUTR/BUTR.CrashReport/master/assets/Icon128x128.png</PackageIconUrl>
    <PackageTags></PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <ILRepackTargetConfigurations>Debug;Release</ILRepackTargetConfigurations>
    <ILRepackAllowDuplicateResources>true</ILRepackAllowDuplicateResources>
    <ILRepackMergeDebugSymbols>true</ILRepackMergeDebugSymbols>
    <ILRepackPerformInternalize>true</ILRepackPerformInternalize>
    <ILRepackCopyAttributes>false</ILRepackCopyAttributes>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="ILRepack" Version="2.0.35" PrivateAssets="all" />
    <PackageReference Include="ILRepack.FullAuto" Version="1.6.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\BUTR.CrashReport.Renderer.ImGui.Silk.NET\resources\icon.png">
      <LinkBase>resources</LinkBase>
      <LogicalName>resources\icon.png</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="..\BUTR.CrashReport.Renderer.ImGui.Silk.NET\resources\icon_128.bin">
      <LinkBase>resources</LinkBase>
      <LogicalName>resources\icon_128.bin</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="..\BUTR.CrashReport.Renderer.ImGui.Silk.NET\resources\icon_16.bin">
      <LinkBase>resources</LinkBase>
      <LogicalName>resources\icon_16.bin</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="..\BUTR.CrashReport.Renderer.ImGui.Silk.NET\resources\icon_18.bin">
      <LinkBase>resources</LinkBase>
      <LogicalName>resources\icon_18.bin</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="..\BUTR.CrashReport.Renderer.ImGui.Silk.NET\resources\icon_20.bin">
