    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Ultz.Native.GLFW" Version="$(GlfwVersion)" />
    <PackageReference Include="Silk.NET.GLFW" Version="$(SilkNETVersion)" PrivateAssets="all" />
    <PackageReference Include="Silk.NET.Input.Glfw" Version="$(SilkNETVersion)" PrivateAssets="all" />
    <PackageReference Include="Silk.NET.Windowing.Glfw" Version="$(SilkNETVersion)" PrivateAssets="all" />

    <PackageReference Include="Ultz.Native.SDL" Version="$(SdlVersion)" />
    <PackageReference Include="Silk.NET.SDL" Version="$(SilkNETVersion)" PrivateAssets="all" />
    <PackageReference Include="Silk.NET.Input.Sdl" Version="$(SilkNETVersion)" PrivateAssets="all" />
    <PackageReference Include="Silk.NET.Windowing.Sdl" Version="$(SilkNETVersion)" PrivateAssets="all" />

    <PackageReference Include="Silk.NET.Input.Extensions" Version="$(SilkNETVersion)" PrivateAssets="all" />

    <PackageReference Include="Silk.NET.OpenGL" Version="$(SilkNETVersion)" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BUTR.CrashReport.Models\BUTR.CrashReport.Models.csproj" />
    <ProjectReference Include="..\BUTR.CrashReport.Native\BUTR.CrashReport.Native.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\BUTR.CrashReport.Native.SourceGenerator\BUTR.CrashReport.Native.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />

    <ProjectReference Include="..\BUTR.CrashReport.CImGui\BUTR.CrashReport.CImGui.csproj" PrivateAssets="all" />
  </ItemGroup>
  
